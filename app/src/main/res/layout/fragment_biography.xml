<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_half_margin"
        android:layout_margin="@dimen/activity_half_small_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="20dp"
                android:layout_margin="@dimen/activity_half_quarter_margin"
                android:src="@mipmap/ic_info"
                android:tint="#ccc"/>
            <ScrollView
                android:layout_width="0dp"
                android:layout_weight="11"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_half_margin"
                android:paddingRight="@dimen/activity_half_margin"
                android:paddingBottom="@dimen/activity_half_margin">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.xiberty.propongo.contrib.views.XTextView
                        android:id="@+id/textView_Bio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/activity_half_quarter_margin"
                        android:text="@string/lorem_ipsum"
                        android:textSize="12sp"
                        />

                </LinearLayout>
            </ScrollView>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>