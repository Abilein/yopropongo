<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/activity_half_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgAvatar"
        android:layout_width="@dimen/comment_avatar_size"
        android:layout_height="@dimen/comment_avatar_size"
        android:layout_gravity="top"
        android:layout_marginRight="@dimen/activity_half_quarter_margin"
        android:clickable="true"
        android:src="@drawable/avatar"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_half_margin"
        android:paddingTop="@dimen/activity_half_margin"
        android:paddingRight="@dimen/activity_half_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <com.xiberty.propongo.contrib.views.XTextView
                android:id="@+id/lblFullName"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:lineSpacingExtra="-2dp"
                android:text="Victor Aguilar"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:lineSpacingExtra="-2dp"
                android:text="18 Ago, 2015"
                android:textSize="8sp"
                android:gravity="right" />
        </LinearLayout>

        <TextView
            android:id="@+id/lblComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="-2dp"
            android:text="Comentario anonimo Comentario anonimo Comentario anonimo "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="italic"
            android:textSize="10sp" />

    </LinearLayout>


</LinearLayout>


